<Window x:Class="NetWatch.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetWatch.Client"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        mc:Ignorable="d"
        Title="NetWatch Dashboard C2" Height="500" Width="900">
    
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Grid Background="#121212">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1E1E1E" Padding="15">
            <StackPanel Orientation="Horizontal">
                <Ellipse Width="12" Height="12" 
                         Fill="{Binding ConnectionStatusColor}" 
                         Effect="{x:Null}" 
                         Margin="0,0,15,0"/>
                
                <TextBlock Text="REAL-TIME TELEMETRY AGENT" 
                           Foreground="#E0E0E0" 
                           FontSize="16" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <lvc:CartesianChart Grid.Column="0"
                                Series="{Binding Series}" 
                                XAxes="{Binding XAxes}"
                                YAxes="{Binding YAxes}"
                                TooltipPosition="Top"
                                LegendPosition="Hidden"> 
            </lvc:CartesianChart>

            <Border Grid.Column="1" Background="#1E1E1E" CornerRadius="4" Margin="15,0,0,0" Padding="10">
                <StackPanel>
                    <TextBlock Text="LIVE DATA" Foreground="Gray" FontSize="11" Margin="0,0,0,10"/>
                    
                    <ItemsControl ItemsSource="{Binding DashboardItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Rectangle Grid.Column="0" Width="4" Height="15" RadiusX="2" RadiusY="2">
                                        <Rectangle.Fill>
                                            <SolidColorBrush Color="{Binding Color}"/>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    
                                    <TextBlock Grid.Column="1" Text="{Binding Name}" 
                                               Foreground="#CCCCCC" 
                                               FontSize="12" 
                                               VerticalAlignment="Center" 
                                               Margin="10,0"/>
                                    
                                    <TextBlock Grid.Column="2" Text="{Binding Value}" 
                                               Foreground="White" 
                                               FontWeight="Bold" 
                                               FontSize="12" 
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>